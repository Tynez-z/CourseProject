<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">@android:color/black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="btnStyleForgotPassword">
        <item name="android:textSize">@dimen/text_12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/design_button_sign_in</item>
    </style>

    <style name="btnStyleSignIn">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/design_button_sign_in</item>
    </style>

    <style name="styleTvAdditionalText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="styleTvName">
        <item name="android:textSize">@dimen/text_20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/josefin_sans_light</item>
    </style>

    <style name="styleTvPassword">
        <item name="android:textSize">@dimen/text_24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="styleTvNameApp">
        <item name="android:fontFamily">josefin_sans_light</item>
        <item name="android:textSize">@dimen/text_24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tvSignIn">
        <item name="android:textSize">@dimen/text_40sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/josefin_sans_light</item>
    </style>

    <style name="styleTvCreateAccount">
        <item name="android:textSize">@dimen/text_32sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/josefin_sans_light</item>
    </style>

    <style name="tvStyleTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="tvStyleDescription">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="tvStyleDescribe">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#E1DFDF</item>
        <item name="fontFamily">@font/asul</item>
    </style>

    <style name="boldStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tvStyleGreyBold">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>